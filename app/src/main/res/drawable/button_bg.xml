<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background when button is pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#3F51B5" /> <!-- Change color to desired color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Default background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#303F9F" /> <!-- Change color to desired color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
