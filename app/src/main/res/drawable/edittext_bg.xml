<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background when EditText is focused -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#ECEFF1" /> <!-- Change color to desired color -->
            <corners android:radius="8dp" />
            <stroke android:width="2dp" android:color="#FF9800" /> <!-- Change color to desired color -->
        </shape>
    </item>
    <!-- Default background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Change color to desired color -->
            <corners android:radius="8dp" />
            <stroke android:width="1dp" android:color="#BDBDBD" /> <!-- Change color to desired color -->
        </shape>
    </item>
</selector>
